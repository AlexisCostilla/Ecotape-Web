  <!-- TEXTO INFERIOR CON ANIMACIN -->
  <div class="rounded-2xl p-8 w-11/12 max-w-7xl mx-auto mt-10 mb-10 bg-banfield-green  shadow-xl opacity-0 animate-fadeIn" style="animation-delay: 0.6s">
    <h2 class="text-white text-center text-lg md:text-2xl font-medium leading-relaxed">
      En <span class="font-bold text-yellow-400">Ecotape</span> trabajamos desde hace a帽os ofreciendo
      <span class="font-bold text-yellow-400">calidad</span>, atenci贸n personalizada y
      <span class="font-bold text-yellow-400">soluciones r谩pidas</span> para tu impresora.
    </h2>
  </div>

  <!-- BANNER ANIMADO -->
  <div class="bg-white border-t-4 border-b-4 border-banfield-green p-6 mx-auto text-center shadow-lg overflow-hidden mb-10 opacity-0 animate-fadeIn" style="animation-delay: 0.8s">
    <p id="animatedText" class="font-bold text-banfield-green text-xl md:text-2xl transition-all duration-700 ease-in-out">
      <span class="text-yellow-500 text-3xl">+10 A帽os</span> trabajando en ofrecer el mejor servicio de venta y post venta.
    </p>
  </div>

  <!-- SECCIN NOSOTROS -->

  <style>
    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }

      </style>


  <style>
    @keyframes slideUp {
      from { opacity: 0; transform: translateY(30px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    @keyframes slideRight {
      from { opacity: 0; transform: translateX(50px); }
      to { opacity: 1; transform: translateX(0); }
    }
    
    @keyframes scaleIn {
      from { opacity: 0; transform: scale(0.9); }
      to { opacity: 1; transform: scale(1); }
    }

    @keyframes slideText {
      0%, 30% { transform: translateX(0); opacity: 1; }
      35%, 65% { transform: translateX(-100%); opacity: 0; }
      70%, 100% { transform: translateX(0); opacity: 1; }
    }
    
    .animate-fadeIn { animation: fadeIn 0.8s ease-out forwards; }
    .animate-slideUp { animation: slideUp 0.8s ease-out forwards; }
    .animate-slideRight { animation: slideRight 0.8s ease-out forwards; }
    .animate-scaleIn { animation: scaleIn 0.6s ease-out forwards; }
    
    .delay-100 { animation-delay: 0.1s; }
    .delay-200 { animation-delay: 0.2s; }
    .delay-300 { animation-delay: 0.3s; }
    .delay-400 { animation-delay: 0.4s; }
    .delay-500 { animation-delay: 0.5s; }
    .delay-600 { animation-delay: 0.6s; }
    
    .opacity-0 { opacity: 0; }
    
    /* Colores Banfield */
    .bg-banfield-green { background-color: #00563F; }
    .bg-banfield-light-green { background-color: #00A859; }
    .text-banfield-green { color: #00563F; }
    .text-banfield-light-green { color: #00A859; }
    .border-banfield-green { border-color: #00563F; }
    
    /* Gradiente Banfield */
    .bg-banfield-gradient {
      background: linear-gradient(135deg, #00563F 0%, #00A859 100%);
    }
    
    .hover-banfield:hover {
      background-color: #00A859;
      transform: translateY(-2px);
      transition: all 0.3s ease;
    }

    /* Patr贸n de rayas verde */
    .stripes-pattern {
      background-image: repeating-linear-gradient(
        45deg,
        #00563F,
        #00563F 20px,
        #00A859 20px,
        #00A859 40px
      );
      opacity: 0.1;
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      pointer-events: none;
    }
  </style>
 
 <script>
    // Animaci贸n de texto rotativo
    const textos = [
      "<span class='text-yellow-400 text-3xl'>+10 A帽os</span> trabajando en ofrecer el mejor servicio de venta y post venta.",
      "Comprometidos con la <span class='text-yellow-400'>calidad</span> y la <span class='text-yellow-400'>satisfacci贸n</span> de nuestros clientes.",
      "<span class='text-yellow-400'>Soluciones r谩pidas</span> y personalizadas para tu <span class='text-yellow-400'>impresora</span>."
    ];

    let index = 0;
    const textElement = document.getElementById("animatedText");

    function cambiarTexto() {
      if (!textElement) return;
      
      textElement.style.opacity = '0';
      textElement.style.transform = 'translateY(20px)';
      
      setTimeout(() => {
        index = (index + 1) % textos.length;
        textElement.innerHTML = textos[index];
        textElement.style.opacity = '1';
        textElement.style.transform = 'translateY(0)';
      }, 500);
    }

    setInterval(cambiarTexto, 4000);
  </script>