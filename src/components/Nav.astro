<nav class="relative w-8/12 h-7/12 flex items-center justify-center overflow-hidden mx-auto rounded-lg mt-20">
  <carousel class="w-full h-full relative">
    <img
      src="https://images.unsplash.com/photo-1493246507139-91e8fad9978e?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2940&q=80"
      class="absolute inset-0 w-full h-full object-cover opacity-100 transition-opacity duration-1000"
    />
    <img
      src="https://images.unsplash.com/photo-1497436072909-60f360e1d4b1?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2560&q=80"
      class="absolute inset-0 w-full h-full object-cover opacity-0 transition-opacity duration-1000"
    />
    <img
      src="https://images.unsplash.com/photo-1518623489648-a173ef7824f3?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2762&q=80"
      class="absolute inset-0 w-full h-full object-cover opacity-0 transition-opacity duration-1000"
    />
  </carousel>
</nav>

<script>
  const images = document.querySelectorAll("carousel img");
  let currentIndex = 0;

  function cambiosImg() {
    images.forEach((img, index) => {
      img.classList.toggle("opacity-100", index === currentIndex);
      img.classList.toggle("opacity-0", index !== currentIndex);
    });

    currentIndex = (currentIndex + 1) % images.length;
    setTimeout(cambiosImg, 3000);
  }

  cambiosImg();
</script>

<!-- Contenido centrado sobre la imagen -->
<div
  class="absolute inset-0 flex flex-col items-center justify-center text-center"
>
  <div class="bg-[#609A54]/90 rounded-lg p-6 w-11/12 max-w-xl mx-auto opacity-90">
    <h1 class="text-white text-2xl md:text-4xl font-bold">
      Bienvenidos a Ecotape
    </h1>
    <p class="text-white text-base md:text-lg mt-2">
      Soluciones en insumos y servicios para impresión de calidad.
    </p>
  </div>

  <!-- Botón debajo -->
  <button
    class="mt-6 px-6 py-2 bg-white text-[#609A54] font-semibold rounded shadow hover:bg-[#e6f4ea] transition"
  >
    <a href="#productos">Ver productos</a>
  </button>
</div>

<!-- Flecha animada -->
<div class="flex justify-center mt-6">
  <a
    href="#Quienes Somos"
    class="text-[#609A54] transition flex justify-center m-40"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="w-32 h-32 animate-slow-bounce"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <path d="m7 6 5 5 5-5"></path>
      <path d="m7 13 5 5 5-5"></path>
    </svg>
  </a>

  <style>
    @keyframes slow-bounce {
      0%,
      100% {
        transform: translateY(0);
      }
      50% {
        transform: translateY(8px); /* menos salto */
      }
    }

    .animate-slow-bounce {
      animation: slow-bounce 1s ease-in-out infinite; /* más lento */
    }
  </style>
</div>
